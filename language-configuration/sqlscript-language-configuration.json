{
    "comments": {
        "lineComment": "--",
        "blockComment": [
            "/*",
            "*/"
        ]
    },
    "brackets": [
        [
            "{",
            "}"
        ],
        [
            "[",
            "]"
        ],
        [
            "(",
            ")"
        ]
    ],
    "autoClosingPairs": [
        {
            "open": "BEGIN",
            "close": "END",
            "notIn": [
                "string",
                "comment"
            ]
        },
        {
            "open": "begin",
            "close": "end",
            "notIn": [
                "string",
                "comment"
            ]
        },
        {
            "open": "CASE",
            "close": "END",
            "notIn": [
                "string",
                "comment"
            ]
        },
        {
            "open": "case",
            "close": "end",
            "notIn": [
                "string",
                "comment"
            ]
        },
        {
            "open": "IF",
            "close": "END IF",
            "notIn": [
                "string",
                "comment"
            ]
        },
        {
            "open": "if",
            "close": "end if",
            "notIn": [
                "string",
                "comment"
            ]
        },
        {
            "open": "FOR",
            "close": "END FOR",
            "notIn": [
                "string",
                "comment"
            ]
        },
        {
            "open": "for",
            "close": "end for",
            "notIn": [
                "string",
                "comment"
            ]
        },
        {
            "open": "{",
            "close": "}"
        },
        {
            "open": "[",
            "close": "]"
        },
        {
            "open": "(",
            "close": ")"
        },
        {
            "open": "\"",
            "close": "\"",
            "notIn": [
                "string"
            ]
        },
        {
            "open": "N'",
            "close": "'",
            "notIn": [
                "string",
                "comment"
            ]
        },
        {
            "open": "'",
            "close": "'",
            "notIn": [
                "string",
                "comment"
            ]
        },
        {
            "open": "/**",
            "close": "*/",
            "notIn": [
                "string",
                "comment"
            ]
        }
    ],
    "surroundingPairs": [
        [
            "{",
            "}"
        ],
        [
            "[",
            "]"
        ],
        [
            "(",
            ")"
        ],
        [
            "\"",
            "\""
        ],
        [
            "'",
            "'"
        ],
        [
            "`",
            "`"
        ]
    ],
    "indentationRules": {
        "increaseIndentPattern": {
            "pattern": "begin|case|if|else if|else|for",
            "flags": "i"
        },
        "decreaseIndentPattern": {
            "pattern": "end( (if|for))?|else",
            "flags": "i"
        }
    }
}