{
    "comments": {
        "lineComment": "--",
        "blockComment": [
            "/*",
            "*/"
        ]
    },
    "brackets": [
        [
            "{",
            "}"
        ],
        [
            "[",
            "]"
        ],
        [
            "(",
            ")"
        ]
    ],
    "autoClosingPairs": [
        {
            "open": "BEGIN",
            "close": "END"
        },
        {
            "open": "begin",
            "close": "end"
        },
        {
            "open": "CASE",
            "close": "END"
        },
        {
            "open": "case",
            "close": "end"
        },
        {
            "open": "{",
            "close": "}"
        },
        {
            "open": "[",
            "close": "]"
        },
        {
            "open": "(",
            "close": "}"
        },
        {
            "open": "\"",
            "close": "\"",
            "notIn": [
                "string"
            ]
        },
        {
            "open": "N'",
            "close": "'",
            "notIn": [
                "string",
                "comment"
            ]
        },
        {
            "open": "'",
            "close": "'",
            "notIn": [
                "string",
                "comment"
            ]
        }
    ],
    "surroundingPairs": [
        [
            "{",
            "}"
        ],
        [
            "[",
            "]"
        ],
        [
            "(",
            ")"
        ],
        [
            "\"",
            "\""
        ],
        [
            "'",
            "'"
        ],
        [
            "`",
            "`"
        ]
    ],
    "indentationRules": {
        "increaseIndentPattern": {
            "pattern": "^\\s*(BEGIN).*\\.$",
            "flags": "i"
        },
        "decreaseIndentPattern": {
            "pattern": "^\\s*(END)\\.$",
            "flags": "i"
        }
    }
}